{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/project-flogo/flogo-web/schemas/1.0.0/stream/common.json",
  "definitions": {
    "stage": {
      "type": "object",
      "required": ["ref"],
      "properties": {
        "ref": {
          "type": "string",
          "activity-installed": true
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": true,
        "description": true,
        "settings": {
          "type": "object",
          "additionalProperties": true
        },
        "input": {
          "type": "object",
          "additionalProperties": true
        },
        "output": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
