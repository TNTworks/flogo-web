{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/project-flogo/flogo-web/schemas/1.0.0/common.json",
  "definitions": {
    "valueType": {
      "type": "string",
      "enum": [
        "string",
        "integer",
        "int",
        "long",
        "number",
        "double",
        "boolean",
        "bool",
        "object",
        "array",
        "params",
        "bytes",
        "datetime",
        "any"
      ]
    },
    "mappingType": {
      "type": "string",
      "enum": ["assign", "literal", "expression", "object", "array"]
    },
    "mappingsCollection": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/mapping"
      }
    },
    "mapping": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mapTo", "type", "value"],
      "properties": {
        "mapTo": {
          "description":
            "Name of the property to map to. i.e. the left hand side of the expression",
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/mappingType"
        },
        "value": {
          "description":
            "The value to map. i.e. the right hand side of the expression",
          "$comment": "Type any, so no 'type' keyword"
        }
      }
    },
    "appProperty": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/valueType"
        },
        "value": {
          "description": "The value to map. i.e. the right hand side of the expression",
          "$comment": "Type any, so no 'type' keyword"
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "input": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/metadataItem"
          }
        },
        "output": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/metadataItem"
          }
        }
      }
    },
    "metadataItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "$ref": "#/definitions/valueType"
        }
      }
    }
  }
}
